describe "GET edit" do
     it "returns http success" do
       get :edit, params: { topic_id: my_topic.id, id: sponsored_post.id }
       expect(response).to have_http_status(:success)
     end
 
     it "renders the #edit view" do
       get :edit, topic_id: my_topic.id, id: sponsored_post.id
       expect(response).to render_template :edit
     end
 
     it "assigns sponsored_post to be updated to @sponsored_post" do
       get :edit, params: { topic_id: my_topic.id, id: sponsored_post.id }
       sponsored_instance = assigns(:sponsored_post)
 
       expect(sponsored_instance.id).to eq sponsored_post.id
       expect(sponsored_instance.title).to eq sponsored_post.title
       expect(sponsored_instance.body).to eq sponsored_post.body
     end
   end
   